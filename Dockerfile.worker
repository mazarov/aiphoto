FROM node:20-alpine

# Install fonts for SVG text rendering (Cyrillic + Latin)
RUN apk add --no-cache fontconfig ttf-dejavu \
    && fc-cache -fv \
    && fc-list | head -5
ENV FONTCONFIG_PATH=/etc/fonts

WORKDIR /app
COPY package*.json ./
RUN npm ci

COPY tsconfig.json ./
COPY src ./src

RUN npm run build

# Copy non-TS assets (fonts) to dist
RUN cp -r src/assets dist/assets 2>/dev/null || true

CMD ["node", "dist/worker.js"]
